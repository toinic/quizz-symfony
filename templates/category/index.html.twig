{% extends 'base.html.twig' %}

{% block title %}{{controller_name}}{% endblock %}
{% block body %}
  <h1>List of categories</h1>


  <table class="table table-striped text-center">
    <!-- <thead>
      <tr>
        <th>#id | Category name</th>
      </tr>
    </thead> -->
    <tbody>
      {% for category in categories %}
        <tr>
          <td>#{{category.id}}</td>
          <td>{{category.name}}</td>
          <td class='text-right'>
            <a class="btn btn-secondary btn-sm" href="{{path('category_edit', {'id':category.id})}}">Edit</a>
          </td>
          <td class='text-left'>
            <a class="btn btn-danger btn-sm" href="{{path('category_delete', {'id':category.id})}}">Delete</a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <a class="btn btn-dark" href="{{path('category_add')}}">Add category</a>
{% endblock %}
